<!DOCTYPE html>
<html>
  <head>
    <title>I Need A Prompt</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/styles.css" />
    <base target="_blank" />
    <script src="/ineedaprompt.js"></script>
    <script src="/script.js"></script>
    <meta property="og:url" content="http://www.ineedaprompt.com" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="{{title}}" />
    <meta property="og:description" content="{{description}}" />
    <meta property="og:site_name" content="INeedAPrompt" />
  </head>
  <body>
    <input id="navToggler" type="checkbox" />
    <label id="navTrigger" for="navToggler"></label>
    <div id="mainBox">
        <h1 id="promptNext">I Need A Prompt{{#if count}} &num;<span id="promptNum">{{count}}</span>{{/if}}
        </h1>
      <main>
        <div id="promptPlaque">
          <blockquote id="promptOutput">{{prompt}}</blockquote>
          <aside>
            <ul class="links">
              <li><a id="twitter">&num;ineedaprompt</a></li>
              <li><a id="reddit">r/ineedaprompt</a></li>
              <li><a id="facebook">facebook</a></li>
            </ul>
          </aside>
        </div>
      </main>
      <footer>
        <ul id="wordTypes">
          {{#each choices}}
          <li>
            <input type="checkbox" {{this.checked}} value="{{this.type}}" id="choice_{{@index}}" />
            <label for="choice_{{@index}}">{{this.type}}</label>
          </li>
          {{/each}}
        </ul>
      </footer>
    </div>
    <nav>
      <div id="innerNavBox">
        <h3>Generated from this dictionary:</h3>
        <form id="dictionaryForm" target="_top" method="post" action="/dictionary">
          <ul id="wordColumns">
            {{#each lists}}
            <li class="list">
              <label for="{{@key}}">{{@key}}s</label>
              <textarea id="{{@key}}" name="{{@key}}">{{this}}</textarea>
            </li>
            {{/each}}
          </ul>
          <div id="dictionaryInfo">
            <input type="text" id="dictionaryName" name="dictionary" placeholder="Dictionary name" />
            <input type="text" name="password" placeholder="Super-secure password" />
            <input type="submit" value="Save your dictionary" />
          </div>
        </form>

        <ul class="links">
          <li><a id="jsonLink" href="/default.json">JSON</a></li>
          <li><a id="apiLink" href="/api">API</a></li>
          <li><a href="http://github.com/robertakarobin/inap-node">Github</a></li>
          <li><a href="http://robertakarobin.com">RobertAKARobin</a></li>
          <li><a href="/">INeedAPrompt</a></li>
        </ul>
      </div>
    </nav>
  </body>
</html>
